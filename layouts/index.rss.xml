{{/* regexp begin */}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}

{{/* google drive image */}}
{{ $gphoto := `(<img src="(https:\/\/drive\.google\.com\/open.+id=([^\"]+))".*alt="google-([^\"]+)"\s*(\/)?>)` }}
{{ $newgphoto := `
<figure class="gphoto-media">
  <img class="gphoto-media" src="https://drive.google.com/uc?export=view&id=${3}" alt="${4}" style="max-width: 100%;"/>
  <figcaption>
    <center class="caption-text">${4}</center>
  </figcaption>
</figure>
` }}
{{/* normal image */}}
{{ $nphoto := `(<img src="([^\"]+)".*alt="([^\"]+)"\s*(\/)?>)` }}
{{ $newnphoto := `
  <figure class="gphoto-media">
    <img src="${2}" alt="${3}" style="max-width: 100%;"/>
    <figcaption>
      <center class="caption-text">${3}</center>
    </figcaption>
  </figure>
` }}
{{ $clean := ` ` }}
{{ $codes := `(?ms:(<div class="highlight">\s*?<pre.*?<\/code>\s*?<\/pre>\s*?<\/div>)|(<pre>\s*?<code>.*<\/code>\s*?<\/pre>))` }}
{{ $tablecodes := `(?ms:<div class="highlight">\s*?<div.*?<table.*?<\/table>\s*?<\/div>\s*?<\/div>)` }}
{{ $blockcode := `<div style="border: 1px solid #888888;">${1}</div>` }}
{{ $yts := `(?ms:<div class="mb4".*?<iframe.*?<\/iframe>\s*?<\/div>)` }}
{{ $iframes := `(?ms:<iframe.*?<\/iframe>)` }}
{{ $footnotes := `(?ms:(<a href="#fnref.*?<\/a>)|(<sup id="fnref.*?<\/sup>))` }}
{{ $comments := `(?ms:<!--.*?-->)` }}

{{/* regexp end */}}

<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ if eq  .Title  .Site.Title }}{{ .Site.Title }}{{ else }}{{ with .Title }}{{.}} on {{ end }}{{ .Site.Title }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>Recent content {{ if ne  .Title  .Site.Title }}{{ with .Title }}in {{.}} {{ end }}{{ end }}on {{ .Site.Title }}</description>
    <generator>Hugo -- gohugo.io</generator>{{ with .Site.LanguageCode }}
    <language>{{.}}</language>{{end}}{{ with .Site.Author.email }}
    <managingEditor>{{.}}{{ with $.Site.Author.name }} ({{.}}){{end}}</managingEditor>{{end}}{{ with .Site.Author.email }}
    <webMaster>{{.}}{{ with $.Site.Author.name }} ({{.}}){{end}}</webMaster>{{end}}{{ with .Site.Copyright }}
    <copyright>{{.}}</copyright>{{end}}{{ if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{ with .OutputFormats.Get "RSS" }}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{ end }}
    {{ range .Site.RegularPages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{ with .Site.Author.email }}<author>{{.}}{{ with $.Site.Author.name }} ({{.}}){{end}}</author>{{end}}
      <guid>{{ .Permalink }}</guid>
      <description>
        {{ "<![CDATA[" | safeHTML }}
          {{ .Summary | replaceRE $gphoto $newgphoto | replaceRE $nphoto $newnphoto | replaceRE $comments $clean | replaceRE "\n" "<br/>" | safeHTML }}
          {{ if and (isset .Params "image") (not (eq .Params.image "")) }}
            <p><a href="{{ .Permalink | absURL }}"><img src="{{ .Params.image | absURL }}" style="max-width: 100%;"/></a></p>
          {{ else }}
            <p><a href="{{ .Permalink | absURL }}"><img src="{{ .Site.BaseURL }}/img/default-header-img.jpg" style="max-width: 100%;"/></a></p>
          {{ end }}
          <p><a href="{{ .Permalink | absURL }}">Visit website to read the full article</a></p>
          {{ $tmpContent := .Content }}
          {{ $tmpContent := $tmpContent | replaceRE $comments $clean }}
          {{ $tmpContent := $tmpContent | replaceRE $gphoto $newgphoto }}
          {{ $tmpContent := $tmpContent | replaceRE $nphoto $newnphoto }}
          {{ $tmpContent := $tmpContent | replaceRE $codes $blockcode }}
          {{ $tmpContent := $tmpContent | replaceRE $tablecodes $blockcode }}
          {{ $tmpContent := $tmpContent | replaceRE $yts $clean }}
          {{ $tmpContent := $tmpContent | replaceRE $iframes $clean }}
          {{ $tmpContent := $tmpContent | replaceRE $footnotes $clean }}
          {{ $tmpContent := $tmpContent | replaceRE "\n" "<br/>" }}
          {{ $tmpContent := $tmpContent | replaceRE "(<br/>)?(</?p>)(<br/>)?" "${2}" }}
          {{ $tmpContent := $tmpContent | replaceRE "</li><br/>" "</li>" }}
          {{ $tmpContent := $tmpContent | replaceRE "</h1><br/>" "</h1>" }}
          {{ $tmpContent := $tmpContent | replaceRE "(</?figcaption>)<br/>" "${1}" }}
          {{ $tmpContent := $tmpContent | replaceRE "</center><br/>" "</center>" }}
          {{ $tmpContent := $tmpContent | replaceRE "(</?[ou]l>)<br/>" "${1}" }}
          {{ $tmpContent | safeHTML }}
        {{ "]]>" | safeHTML }}
      </description>
    </item>
    {{ end }}
  </channel>
</rss>